<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#f5f5f5"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        app:cardCornerRadius="3.8dp"
        android:layout_marginRight="10.6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="14.4dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/badge"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:textColor="#FFF"
                    android:text="GAZ"
                    android:layout_alignParentTop="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/snackBarColorNotificationSuccess"
                    />

                <RelativeLayout
                    android:layout_toRightOf="@+id/badge"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp">

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txt_designe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="90dp"
                        android:layout_marginTop="0dp"
                        android:text="Noms"
                        android:textColor="#262628"
                        android:textSize="12.4sp" />

                   <!-- <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txt_qt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="60dp"
                        android:text="Quantite"
                        android:textColor="#262628"
                        android:textSize="14.4sp"
                        android:layout_below="@+id/txt_designe"/>
-->

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:text="Date"
                        android:textColor="#262628"
                        android:textSize="9sp" />


                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>