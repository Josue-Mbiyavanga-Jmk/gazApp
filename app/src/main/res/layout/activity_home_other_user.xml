<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colWhite"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/ContMedium"

        android:gravity="center"
        android:paddingBottom="70dp"
        >




        <TextView
            android:text="@string/txt_halp_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TxtImportanceApp"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:textColor="@color/GrisColor"/>

        <LinearLayout
            android:layout_marginTop="55dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/contenairetopButton"
            android:layout_below="@+id/TxtImportanceApp">



            <LinearLayout
                android:id="@+id/contenaireNewAbonne"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="38dp"
                >

                <ImageView
                    android:id="@+id/BtNewAbonne"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/arrondi_grid"
                    android:padding="15dp"
                    android:tint="@color/md_material_blue_600"
                    app:srcCompat="@drawable/ic_natural_gas"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Nouvel \n Abonnement"
                    android:textAlignment="gravity"
                    android:textColor="@color/BcGridbis"
                    android:textSize="12sp"
                    android:textStyle="normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contenairetopButton"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/contenaireRechargeGaz"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/BtRecharge"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/arrondi_grid"
                    android:padding="15dp"
                    android:tint="@color/md_material_blue_600"
                    app:srcCompat="@drawable/ic_fuel"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Recharge\nGaz"
                    android:textAlignment="gravity"
                    android:textColor="@color/BcGridbis"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contenairetopButton"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/contenaireLocaliseAgence"
                android:orientation="vertical"
                android:layout_marginRight="38dp"
                >

                <ImageView
                    android:id="@+id/BtLocaliseAgence"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/arrondi_grid"
                    android:padding="15dp"
                    android:tint="@color/md_material_blue_600"
                    app:srcCompat="@drawable/ic_destination"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Localisations\nAgence"
                    android:textAlignment="gravity"
                    android:textColor="@color/BcGridbis"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/contenairetopButton"
            >
            <LinearLayout
                android:layout_marginLeft="38dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/contenaireMouv"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/BtMouv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/arrondi_grid"
                    android:padding="15dp"
                    android:tint="@color/md_material_blue_600"
                    app:srcCompat="@drawable/ic_fuel_truck"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Approvisionner\nStock"
                    android:textAlignment="gravity"
                    android:textColor="@color/BcGridbis"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contenairetopButton"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/contenaireNewStat"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/BtStat"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/arrondi_grid"
                    android:padding="15dp"
                    android:tint="@color/md_material_blue_600"
                    app:srcCompat="@drawable/ic_analytics"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Stat stock"
                    android:textAlignment="gravity"
                    android:textColor="@color/BcGridbis"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contenairetopButton"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/contenaireLogout"
                android:orientation="vertical"
                android:layout_marginRight="38dp"
                >

                <ImageView
                    android:id="@+id/BtLogout"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/arrondi_grid"
                    android:padding="15dp"
                    android:tint="@color/md_material_blue_600"
                    app:srcCompat="@drawable/ic_log_out"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:text="Quitter"
                    android:textAlignment="gravity"
                    android:textColor="@color/BcGridbis"
                    android:textSize="10sp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>







    </RelativeLayout>



    <TextView

        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="12.5sp"
        android:id="@+id/link_about"
    android:layout_marginBottom="10dp"
        android:text="@string/txt_help_about"
        android:textColor="#c1bdbd"
        />

</RelativeLayout>

