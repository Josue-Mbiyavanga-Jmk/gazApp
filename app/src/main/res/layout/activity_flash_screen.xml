<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colWhite"
    >

    <LinearLayout
        android:layout_alignParentTop="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Bgtranspart"
        >

        <ImageView
            android:id="@+id/animation_view"
            android:layout_width="235dp"
            android:layout_height="235dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:padding="100dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/croppedlogos"
            />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avec COETE Gaz, optez pour une cuisson simple, rapide et efficace."
            android:textColor="@android:color/secondary_text_light"
            android:textSize="9sp"
            android:paddingTop="0dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>


      <!--  <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/arrondi_blue"
            android:paddingLeft="53dp"
            android:paddingTop="13dp"
            android:paddingRight="53dp"
            android:id="@+id/BtNext"
            android:paddingBottom="13dp"
            android:text="Continuez"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp" />
-->
        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_load"
            style="@style/SpinKitView.Large.FadingCircle"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fitsSystemWindows="true"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal"
            app:SpinKit_Color="@color/red_btn_bg_color"
            android:visibility="gone"
            />

    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="8sp"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_copy_right"
        android:textColor="#c1bdbd"
        />
</RelativeLayout>