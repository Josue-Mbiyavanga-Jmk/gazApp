<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DÃ©tails du panier"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text_titre"/>



            </RelativeLayout>
            <View
                android:id="@+id/v1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#5d5d5d"
               />

            <RelativeLayout
                android:id="@+id/ligne_1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/txt_quantity"
                    android:layout_marginRight="10dp"
                    android:hint="qt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="offre d'abonnement"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_quantity"
                    android:layout_marginLeft="8dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txt_offre"
                    />

                <TextView
                    android:id="@+id/txt_paie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="total"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#5d5d5d" />
            <RelativeLayout
                android:id="@+id/ligne_2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/txt_quantity2"
                    android:layout_marginRight="10dp"
                    android:hint="qt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="offre d'abonnement"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_quantity2"
                    android:layout_marginLeft="8dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txt_offre2"
                    />


                <TextView
                    android:id="@+id/txt_paie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="total"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/v3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#5d5d5d" />
            <RelativeLayout
                android:id="@+id/ligne_3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <TextView
                    android:padding="3dp"
                    android:paddingLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/txt_quantity3"
                    android:layout_marginRight="10dp"
                    android:hint="qt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="offre d'abonnement"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txt_quantity3"
                    android:layout_marginLeft="8dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txt_offre3"
                    />


                <TextView
                    android:id="@+id/txt_paie3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="total"
                    />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#5d5d5d" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        >
        <customfonts.MyTextView_Roboto_Regular
            android:layout_gravity="center"
            android:background="@drawable/square_blue"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:id="@+id/BtCancel"
            android:paddingBottom="5dp"
            android:text="Annuler"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/BtCancel"
            android:background="@drawable/square_blue"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:id="@+id/BtRecharge"
            android:paddingBottom="5dp"
            android:text="Recharge"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp" />



    </RelativeLayout>




</LinearLayout>