<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toobar_custm"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            >


            <ImageView
                android:background="@drawable/square_blue_press"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/bt_back"
                android:tint="@color/colWhite"
                app:srcCompat="@drawable/ic_black_navigation"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/bt_back"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:text="Statistique"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/txt_title"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/toobar_custm"
            android:id="@+id/contenaireGenrale"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:layout_marginTop="40dp"
            android:background="@color/theme_primary_dark"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    >


                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"


                        android:id="@+id/card_banque"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        app:cardCornerRadius="5.8dp"
                        android:layout_marginRight="10dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="100dp"
                            >

                            <ImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img45"
                                android:background="@color/BcGridbis"
                                />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_toRightOf="@+id/img45"
                                android:paddingLeft="15dp"
                                android:background="@drawable/square_pressed_menu_principal"
                                android:id="@+id/containe_stat_abonnement">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txt_title_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Statistique des abonnements"
                                    android:textColor="#262628"
                                    android:textSize="16.4sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/animation_view"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_alignParentTop="true"
                                    android:tint="@color/md_material_blue_600"
                                    app:srcCompat="@drawable/ic_natural_gas"
                                    />


                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txt_help_taxation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="15dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Vous présente un rapport graphique sur les nouveaux abonnées et le type des produits soubscri par rapport à une période donné."
                                    android:textColor="#262628"
                                    android:layout_below="@+id/txt_title_1"
                                    android:textSize="12sp"
                                    android:drawableRight="@mipmap/ic_next"

                                    />




                            </RelativeLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"

                        android:id="@+id/card_campagne"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        app:cardCornerRadius="5.8dp"
                        android:layout_marginRight="10dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="100dp"
                            >

                            <ImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img45cpt"
                                android:background="@color/BcGridbis"
                                />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_toRightOf="@+id/img45cpt"
                                android:paddingLeft="15dp"
                                android:background="@drawable/square_pressed_menu_principal"
                                android:id="@+id/containe_stat_recharge">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txt_title_cpt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Statistique des recharges"
                                    android:textColor="#262628"
                                    android:textSize="16.4sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/animation_view_localise"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:padding="1dp"
                                    android:tint="@color/md_material_blue_600"
                                    app:srcCompat="@drawable/ic_fuel"
                              />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txt_help_cpt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="15dp"
                                    android:layout_below="@+id/txt_title_cpt"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:drawableRight="@mipmap/ic_next"
                                    android:text="Vous présente un rapport graphique sur les recharges de gaz et le type de produit rechargé pour une période bien précise."
                                    android:textColor="#262628"
                                    android:textSize="12sp"

                                    />




                            </RelativeLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"

                        android:id="@+id/card_entite"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        app:cardCornerRadius="5.8dp"
                        android:layout_marginRight="10dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="100dp"
                            >

                            <ImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="4dp"
                                android:layout_height="match_parent"
                                android:id="@+id/img45entite"
                                android:background="@color/BcGridbis"
                                />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_toRightOf="@+id/img45entite"
                                android:paddingLeft="15dp"
                                android:background="@drawable/square_pressed_menu_principal"
                                android:id="@+id/containe_stat_entree">

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txt_title_view_entite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Statistique des entrées"
                                    android:textColor="#262628"
                                    android:textSize="16.4sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/animation_view_entite"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_alignParentTop="true"
                                    android:tint="@color/md_material_blue_600"
                                    app:srcCompat="@drawable/ic_fuel_truck"
                                   />

                                <customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/txt_help_entite"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="15dp"
                                    android:layout_below="@+id/txt_title_view_entite"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:drawableRight="@mipmap/ic_next"
                                    android:text="Vous présente un rapport graphique sur les mouvements d'entrée des produits dans votre agence en générale ou sur une période bien défini."
                                    android:textColor="#262628"
                                    android:textSize="12sp"

                                    />




                            </RelativeLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>



    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>